<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="dulceria.controller.EntradaDetalleController">
    <!-- TÃ­tulo superior -->
    <top>
        <Label alignment="CENTER" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Entrada" BorderPane.alignment="CENTER" />
    </top>

    <!-- Cuerpo con las tablas -->
    <center>
        <HBox alignment="CENTER" spacing="10">
            <!-- Tabla de entradas (Izquierda) -->
            <VBox alignment="CENTER" prefWidth="300" spacing="10">
                <TableView fx:id="tablaEntradas" prefHeight="150" prefWidth="240.0">
                    <columns>
                        <TableColumn fx:id="colFecha" text="Fecha" />
                        <TableColumn fx:id="colTotal" text="Total" />
                        <TableColumn fx:id="colEstado" text="Estado" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Tabla de detalles (Derecha) -->
            <VBox alignment="CENTER" prefWidth="300" spacing="10">
                <TableView fx:id="tablaDetalles" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="colProducto" text="Producto" />
                        <TableColumn fx:id="colCantidad" text="Cantidad" />
                        <TableColumn fx:id="colCosto" text="Costo" />
                        <TableColumn fx:id="colSubtotal" text="Subtotal" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>

    <!-- Botones y total inferior -->
    <bottom>
        <VBox spacing="10">
            <!-- Total -->
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
                <Label style="-fx-font-size: 14px;" text="Total: $" />
                <Label fx:id="totalLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="0.00" />
            </HBox>
            <!-- Botones -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnCancelar" text="Cancelar" />
                <Button fx:id="btnCambiar" text="Cambiar" onAction="#handleCambiar"/>
            </HBox>
        </VBox>
    </bottom>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
