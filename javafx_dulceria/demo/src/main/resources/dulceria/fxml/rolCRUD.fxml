<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="dulceria.controller.RolController">
    <VBox alignment="CENTER" spacing="10">
        <TextField fx:id="txtNombreRol" promptText="Nombre del Rol" />
        <TextArea fx:id="txtDescripcion" promptText="Descripción" />

        <!-- HBox para los botones -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#crearRol" text="Crear Rol" />
            <Button onAction="#actualizarRol" text="Actualizar Rol" />
            <Button onAction="#eliminarRol" text="Eliminar Rol" />
            <Button onAction="#limpiarCampos" text="Cancelar" />
        </HBox>

        <TableView fx:id="tblRoles" prefHeight="301.0" prefWidth="602.0">
            <columns>
                <TableColumn fx:id="colNombreRol" maxWidth="250.0" minWidth="150.0" prefWidth="150.0" text="Nombre Rol" />
                <TableColumn fx:id="colDescripcion" maxWidth="500.0" minWidth="200.0" prefWidth="450.0" text="Descripción" />
            </columns>
        </TableView>

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</AnchorPane>
