<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dulceria.controller.PermisoController">
    <VBox spacing="10">
        <!-- Campos de texto para Nombre y Descripción -->
        <TextField fx:id="txtNombre" promptText="Nombre del Permiso" />
        <TextArea fx:id="txtDescripcion" promptText="Descripción" />

        <!-- Contenedor HBox para los botones, alineados horizontalmente -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#crearPermiso" text="Crear Permiso" />
            <Button onAction="#actualizarPermiso" text="Actualizar Permiso" />
            <Button onAction="#eliminarPermiso" text="Eliminar Permiso" />
            <Button onAction="#limpiarCampos" text="Cancelar" />
        </HBox>

        <!-- Tabla de Permisos -->
        <TableView fx:id="tblPermisos" prefHeight="249.0" prefWidth="600">
            <columns>
                <TableColumn fx:id="colNombre" maxWidth="300.0" minWidth="150.0" prefWidth="150.0" text="Nombre" />
                <TableColumn fx:id="colDescripcion" maxWidth="500.0" minWidth="450.0" prefWidth="450.0" text="Descripción" />
            </columns>
        </TableView>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
    </VBox>
</AnchorPane>
