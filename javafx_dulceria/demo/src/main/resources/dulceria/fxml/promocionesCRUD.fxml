<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="721.0" prefWidth="1042.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dulceria.controller.PromocionController">
    <!-- Contenedor principal -->
    <VBox prefHeight="709.0" prefWidth="1042.0" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
        <!-- Título principal -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Gestión de Promociones" />

        <!-- Tabla de promociones existentes -->
        <TableView fx:id="tblPromociones" prefHeight="236.0" prefWidth="1002.0" style="-fx-font-size: 14px; -fx-background-color: white;">
            <columns>
                <TableColumn fx:id="colPromocionID" prefWidth="100" text="ID" />
                <TableColumn fx:id="colPromocionNombre" prefWidth="200" text="Nombre" />
                <TableColumn fx:id="colProducto" prefWidth="200" text="Producto" />
                <TableColumn fx:id="colPromocionTipo" prefWidth="150" text="Tipo" />
                <TableColumn fx:id="colPromocionDescuento" prefWidth="150" text="Descuento" />
                <TableColumn fx:id="colPromocionInicio" prefWidth="150" text="Fecha Inicio" />
                <TableColumn fx:id="colPromocionFin" prefWidth="150" text="Fecha Fin" />
                <TableColumn fx:id="colPromocionActivo" prefWidth="100" text="Activo" />
            </columns>
        </TableView>

        <!-- Detalles de la promoción -->
        <VBox prefHeight="370.0" prefWidth="1002.0" spacing="20" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtNombre" promptText="Nombre de la promoción" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Producto:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="cmbProducto" promptText="Selecciona el producto" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Cantidad Necesaria:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtCantidadNecesaria" promptText="Cantidad necesaria para promoción" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="cmbTipo" promptText="Selecciona el tipo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Descuento:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="txtValorDescuento" promptText="Valor del descuento" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Precio Final:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="txtPrecio" promptText="Precio final de la promo" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Fecha Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <DatePicker fx:id="dpFechaInicio" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Fecha Fin:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <DatePicker fx:id="dpFechaFin" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Activo:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <CheckBox fx:id="chkActivo" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            </GridPane>

            <!-- Botones de acción -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnGuardarPromocion" onAction="#guardarPromocion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar" />
                <Button fx:id="btnCambiarEstado" onAction="#cambiarEstadoPromocion" style="-fx-background-color: #FFC107; -fx-text-fill: white;" text="Cambiar Estado" />
                <Button fx:id="btnCancelarPromocion" onAction="#cancelarPromocion" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancelar" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
