<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="main-container" stylesheets="@../css/estilos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dulceria.controller.PromocionController">
    
    <!-- Contenedor principal -->
    <VBox spacing="20" styleClass="main-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Título principal -->
        <Label styleClass="titulo-principal" text="Gestión de Promociones" />

        <!-- Contenedor HBox para organizar la tabla a la izquierda y el formulario a la derecha -->
        <HBox spacing="20" styleClass="content-container" VBox.vgrow="ALWAYS">
            <!-- Tabla de promociones (ocupa más espacio) -->
            <TableView fx:id="tblPromociones" styleClass="table-view" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colPromocionID" prefWidth="50" styleClass="table-column" text="ID" />
                    <TableColumn fx:id="colPromocionNombre" prefWidth="200" styleClass="table-column" text="Nombre" />
                    <TableColumn fx:id="colProducto" prefWidth="200" styleClass="table-column" text="Producto" />
                    <TableColumn fx:id="colPromocionTipo" prefWidth="150" styleClass="table-column" text="Tipo" />
                    <TableColumn fx:id="colPromocionDescuento" prefWidth="85" styleClass="table-column" text="Descuento" />
                    <TableColumn fx:id="colPromocionInicio" prefWidth="150" styleClass="table-column" text="Fecha Inicio" />
                    <TableColumn fx:id="colPromocionFin" prefWidth="150" styleClass="table-column" text="Fecha Fin" />
                    <TableColumn fx:id="colPromocionActivo" prefWidth="100" styleClass="table-column" text="Activo" />
                </columns>
            </TableView>

            <!-- Formulario (ocupa menos espacio) -->
            <VBox spacing="20" styleClass="details-pane" minWidth="400">
                <GridPane hgap="10" vgap="15" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Nombre:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtNombre" promptText="Nombre de la promoción" styleClass="form-textfield" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Producto:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="cmbProducto" promptText="Selecciona el producto" styleClass="combo-box-custom" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Cantidad Necesaria:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="txtCantidadNecesaria" promptText="Cantidad necesaria para promoción" styleClass="form-textfield" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Tipo:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <ComboBox fx:id="cmbTipo" promptText="Selecciona el tipo" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Descuento:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <TextField fx:id="txtValorDescuento" promptText="Valor del descuento" styleClass="form-textfield" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Precio Final:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <TextField fx:id="txtPrecio" promptText="Precio final de la promo" styleClass="form-textfield" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label text="Fecha Inicio:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <DatePicker fx:id="dpFechaInicio" styleClass="form-datepicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Label text="Fecha Fin:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <DatePicker fx:id="dpFechaFin" styleClass="form-datepicker" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                    <Label text="Activo:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                    <CheckBox fx:id="chkActivo" styleClass="form-checkbox" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                </GridPane>

                <!-- Botones de acción -->
                <HBox alignment="CENTER" spacing="20" styleClass="button-bar">
                    <Button fx:id="btnGuardarPromocion" onAction="#guardarPromocion" styleClass="boton-guardar" text="Guardar" />
                    <Button fx:id="btnCambiarEstado" onAction="#cambiarEstadoPromocion" styleClass="boton-actualizar" text="Cambiar Estado" />
                    <Button fx:id="btnCancelarPromocion" onAction="#cancelarPromocion" styleClass="boton-eliminar" text="Cancelar" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</AnchorPane>
