<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="dulceria.controller.PerdidaController" spacing="20" >
    <!-- Título -->
    <Label text="Registro de Pérdidas" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    
    <!-- Tabla -->
    <TableView fx:id="tablePerdidas" prefWidth="600" prefHeight="300" style="-fx-background-color: #f0f0f0;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colProducto" text="Producto" prefWidth="150"/>
            <TableColumn fx:id="colLote" text="Lote" prefWidth="100"/>
            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"/>
            <TableColumn fx:id="colCostoUnitario" text="Costo Unitario" prefWidth="150"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
