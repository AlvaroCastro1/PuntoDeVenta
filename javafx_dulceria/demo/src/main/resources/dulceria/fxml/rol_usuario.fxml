<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="dulceria.controller.UsuarioRolController" spacing="20" alignment="CENTER">
    <Label text="Gestión de Usuario-Rol" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Selección de Usuario y Rol -->
    <HBox spacing="10" alignment="CENTER">
        <VBox>
            <Label text="Usuario"/>
            <ComboBox fx:id="comboUsuario" prefWidth="200"/>
        </VBox>
        <VBox>
            <Label text="Rol"/>
            <ComboBox fx:id="comboRol" prefWidth="200"/>
        </VBox>
    </HBox>

    <!-- Botones de Acción -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Asignar Rol" onAction="#asignarRol"/>
        <Button text="Eliminar Rol" onAction="#eliminarRol"/>
    </HBox>

    <!-- Tabla Relaciones Usuario-Rol -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Relaciones Usuario-Rol"/>
        <TableView fx:id="tablaUsuarioRol" prefWidth="500" prefHeight="200">
            <columns>
                <TableColumn fx:id="columnaUsuario" text="Usuario" prefWidth="250"/>
                <TableColumn fx:id="columnaRol" text="Rol" prefWidth="250"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
