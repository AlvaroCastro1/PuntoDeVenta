<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="main-container" stylesheets="@../css/estilos.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dulceria.controller.VentaController">
    <children>
        <!-- TÃ­tulo de la interfaz -->
        <Label styleClass="titulo-principal" text="Registro de Venta" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" />

        <!-- Contenedor principal -->
        <HBox spacing="20" AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <!-- Formulario para los productos -->
            <VBox styleClass="details-pane" spacing="10" HBox.hgrow="NEVER">
                <Label styleClass="form-label" text="Producto:" />
                <ComboBox fx:id="comboProducto" />
                <Label styleClass="form-label" text="Precio Unitario:" />
                <TextField fx:id="txtPrecioUnitario" editable="false" />
                <Button styleClass="boton-guardar" onAction="#agregarProducto" text="Agregar Producto" />
            </VBox>

            <!-- Contenedor de tabla y resumen -->
            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <!-- Tabla de productos seleccionados -->
                <TableView fx:id="tablaVenta" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colConsecutivo" text="Num." />
                        <TableColumn fx:id="colProducto" text="Producto" />
                        <TableColumn fx:id="colCantidad" text="Cantidad" />
                        <TableColumn fx:id="colPrecioUnitario" text="Precio Unitario" />
                        <TableColumn fx:id="colTotal" text="Total" />
                    </columns>
                </TableView>

                <!-- Resumen de la venta -->
                <VBox styleClass="details-pane" spacing="10" alignment="CENTER_RIGHT">
                    <Label styleClass="form-label" text="Resumen de la Venta:" style="-fx-font-weight: bold;" />
                    <Label styleClass="form-label" fx:id="lblTotal" text="Total: $0.00" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Button styleClass="boton-guardar" onAction="#guardarVenta" text="Registrar Venta" />
                </VBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
